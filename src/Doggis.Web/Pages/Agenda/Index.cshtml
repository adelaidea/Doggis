@page "/"
@{
    ViewData["Title"] = "Agenda";
}

<div class="card">
    <div class="card-header"><strong>Serviço</strong> Agenda</div>
    <div class="card-body">
        <div class="header-button">
            <button class="btn btn-sm btn-secondary" type="button" onclick="location.href = '/agenda/agendarServico';">Agendar Serviço</button>
        </div>
        <form action="" method="get">
            <div class="row">
                <div class="form-group col-sm-6">
                    <label>Cliente</label>
                    <input class="form-control" type="text" placeholder="Cliente" />
                </div>
                <div class="form-group col-sm-6">
                    <label>Data</label>
                    <input class="form-control" type="date" placeholder="Data" />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm-6">
                    <label>Profissional</label>
                    <input class="form-control" type="text" placeholder="Profissional" />
                </div>
                <div class="form-group col-sm-6">
                    <label></label>
                    <button class="btn btn-sm btn-primary" type="button">Filtrar</button>
                </div>
            </div>

            <table class="table table-responsive-sm" id="servicos-agendados">
                <thead>
                    <tr>
                        <th>Cliente</th>
                        <th>Serviço</th>
                        <th>Profissional</th>
                        <th>Data</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/pages/agenda/index.js"></script>
}